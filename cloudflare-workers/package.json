{
  "name": "outside-time-worker",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev -c ../wrangler.toml",
    "build": "cd .. && npm run build -w outside-time-web",
    "deploy": "wrangler deploy -c ../wrangler.toml",
    "db:init": "wrangler d1 execute outside-time-db --local --file=./schema.sql -c ../wrangler.toml",
    "db:init:remote": "wrangler d1 execute outside-time-db --file=./schema.sql -c ../wrangler.toml",
    "test": "vitest"
  },
  "dependencies": {
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.10",
    "@cloudflare/workers-types": "^4.20240117.0",
    "@vitest/runner": "^3.2.4",
    "@vitest/snapshot": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "wrangler": "^3.25.0"
  }
}

{
  "name": "@outside-time/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:iife",
    "build:esm": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.mjs --platform=neutral --external:tweetnacl --external:tweetnacl-util",
    "build:iife": "esbuild src/index.ts --bundle --format=iife --global-name=OutsideTimeCore --outfile=dist/core.bundle.js --platform=browser",
    "test": "vitest run"
  },
  "dependencies": {
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
